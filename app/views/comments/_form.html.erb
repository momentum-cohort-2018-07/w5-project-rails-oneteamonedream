<%= form_with model: @comment, local: true do |form| %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.hidden_field :post_id, value: @post.id %>
  
  
  <div>
      <strong><%= form.label :Body %></strong><br>
      <%= form.text_area :body %>
  </div>

<p>
  <%= form.submit %>
</p>



<% end %>