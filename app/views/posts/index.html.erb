
<header class="header">
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
  <div class="login">
    <% if current_user %>
      <%= link_to 'Log Out', session_path, method: :delete, class: "button" %>

<% end %>
<% if !current_user %>
<%= link_to "Sign Up", new_user_path, class: "button" %> 
<%= link_to "Login", new_session_path, class: "button" %>
<% end %>
  </div>
    <%= image_tag ("football.png")  %>
  <div>
<h1>GAMEDAY</h1>   
<h2><strong>All Talk All Sports</strong></h2>
   
</div>
</header>

<h2>Listing Posts</h2>
<%= link_to 'New Post', new_post_path, class: "button" %>
<table class="table">
  <tr>
    <th>Vote</th>
    <th>Title</th>
    <th>Body</th>
    <th>User</th>
    <th>Actions</th>
    <th colspan="3"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.cached_votes_total %></td>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.created_at.to_formatted_s(:long_ordinal) %></td>
      <td><%= link_to 'Show', post_path(post), class: "button" %></td>
      <% if current_user %>
      <td><%= link_to 'Edit', edit_post_path(post), class: "button" %></td>
      <td><%= link_to 'Destroy', post_path(post), class: "button",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>